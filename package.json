{
	"name": "wayward-schemas",
	"displayName": "Wayward Schemas",
	"description": "Adds schemas for Wayward mods.",
	"version": "1.4.1",
	"publisher": "Aarilight",
	"engines": {
		"vscode": "^1.26.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/WaywardGame/wayward-schemas.git"
	},
	"categories": [
		"Other"
	],
	"contributes": {
		"jsonValidation": [
			{
				"fileMatch": "mod.json",
				"url": "./schema/mod.schema.json"
			},
			{
				"fileMatch": "lang/*.json",
				"url": "./schema/lang.schema.json"
			},
			{
				"fileMatch": "imageOverrides.json",
				"url": "./schema/imageOverrides.schema.json"
			},
			{
				"fileMatch": "customizations.json",
				"url": "./schema/customizations.schema.json"
			}
		],
		"languages": [
			{
				"id": "jsonc",
				"filenamePatterns": [
					"mod.json",
					"**/lang/*.json",
					"imageOverrides.json",
					"customizations.json",
					"launch_options.json"
				]
			},
			{
				"id": "quilt",
				"extensions": [
					".quilt"
				]
			}
		],
		"grammars": [
			{
				"language": "quilt",
				"scopeName": "source.quilt",
				"path": "./syntaxes/quilt.json"
			},
			{
				"scopeName": "wayward.language.entry",
				"path": "./syntaxes/languageEntry.json",
				"injectTo": [
					"source.json.comments",
					"source.ts",
					"source.quilt"
				]
			},
			{
				"scopeName": "wayward.language.section",
				"path": "./syntaxes/languageSection.json",
				"injectTo": [
					"source.ts"
				]
			}
		]
	},
	"activationEvents": [
		"onLanguage:quilt"
	],
	"main": "hover/Extension.js",
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.56.0",
		"@types/node": "15.6.1",
		"typescript": "4.3.2"
	}
}
